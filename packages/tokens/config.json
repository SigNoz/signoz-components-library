{
  "source": ["src/**/*.json"],
  "platforms": {
    "scss_colors": {
      "transformGroup": "scss",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "_colors.scss",
          "format": "scss/variables",
          "filter": {
            "type": "color"
          }
        }
      ]
    },
    "scss_spacings": {
      "transformGroup": "scss",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "_spacings.scss",
          "format": "scss/variables",
          "filter": {
            "type": "spacing"
          }
        }
      ]
    },
    "scss_typography": {
      "transformGroup": "scss",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "_typography.scss",
          "format": "scss/variables",
          "filter": {
            "type": "typography"
          }
        }
      ]
    }
  }
}
