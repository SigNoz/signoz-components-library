{
  "source": ["src/**/*.json"],
  "platforms": {
    "css_colors": {
      "transformGroup": "css",
      "buildPath": "src/Colors/",
      "files": [
        {
          "destination": "_colors.css",
          "format": "css/variables",
          "filter": {
            "type": "color"
          }
        }
      ]
    },
    "css_spacings": {
      "transformGroup": "css",
      "buildPath": "src/Spacing/",
      "files": [
        {
          "destination": "_spacings.css",
          "format": "css/variables",
          "filter": {
            "type": "spacing"
          }
        }
      ]
    },
    "css_typography": {
      "transformGroup": "css",
      "buildPath": "src/Typography/",
      "files": [
        {
          "destination": "_typography.css",
          "format": "css/variables",
          "filter": {
            "type": "typography"
          }
        }
      ]
    }
  }
}
